@model EmpleadosEDM.Models.Empleado

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Antiguedad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Antiguedad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Edad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Edad)
        </dd>

    </dl>
</div>
<table class="table table-striped">
    <tr>
        <th>Categoria</th>
        <th>SubCategoria</th>
        <th>Experiencia</th>
        <th>Salario</th>
    </tr>
    <tr>
        @foreach(var item in Model.Empleado_Detalles)
        {
            <th>@item.Categoria</th>
            <th>@item.Subcategoria</th>
            <th>@item.Experiencia_Anios</th>
            <th>@item.Salario</th>
        }
    </tr>

</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idEmpleado }) |
    @Html.ActionLink("Back to List", "Index")
</p>
